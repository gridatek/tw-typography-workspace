{
  "name": "tw-typography",
  "version": "1.0.0",
  "description": "CSS Variables Typography System for Tailwind CSS v4",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:css && npm run build:types",
    "build:css": "postcss src/typography.css -o dist/typography.css",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "dev": "postcss src/typography.css -o dist/typography.css --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0-alpha.15"
  },
  "devDependencies": {
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "css",
    "typography",
    "tailwindcss",
    "css-variables",
    "design-system",
    "utilities",
    "prose"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/tw-typography.git",
    "directory": "packages/tw-typography"
  },
  "bugs": {
    "url": "https://github.com/yourusername/tw-typography/issues"
  },
  "homepage": "https://github.com/yourusername/tw-typography#readme",
  "publishConfig": {
    "access": "public"
  }
}
